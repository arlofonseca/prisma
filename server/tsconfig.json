{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "es2020",
    "allowJs": false,
    "lib": ["es2021"],
    "types": ["@citizenfx/server", "@types/node"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"],
  "semi": [true, "always"]
}
